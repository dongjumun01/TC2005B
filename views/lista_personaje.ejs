<%- include('includes/_header.ejs') %>

<% if(info != '') { %>
    <div class="notification is-info">
        <%= info %>
    </div>
<% } %>

<% for(let privilegio of privilegios) { %> 
    <% if(privilegio.nombre == "crear personajes") { %>
        <a class="button is-primary" href="/personajes/agregar">
            Agregar personaje
        </a>
    <% } %>
<% } %>

<br><br>

<div class="columns">
<% for (let personaje of personajes) { %>
    <div class="column">
        <div class="card">
            <div class="card-content">
                <p class="title">
                    <a href="/personajes/<%= personaje.id %>"><%= personaje.nombre %></a>
                </p>
                <p class="subtitle is-6">#<%= personaje.nivel %></p>
                <p class="content"><%= personaje.created_at %></p>
            </div>
        </div>
    </div>
<% } %>
</div>

<br><br>

<% for(let privilegio of privilegios) { %> 
    <% if(privilegio.nombre == "crear personajes") { %>
        <a class="button is-primary" href="/personajes/agregar">
            Agregar personaje
        </a>
    <% } %>
<% } %>

